    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xchat.stevenzack.langenius.Main2Activity">


    <Button
        android:id="@+id/filechooser_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
